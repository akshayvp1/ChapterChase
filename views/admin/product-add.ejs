   document.addEventListener('DOMContentLoaded', function () {
  let cropper;
  let currentInput;
  let currentPreviewId;

  // Handle form submission
  const form = document.querySelector('#addProductForm');
  form.addEventListener('submit', async function (event) {
    event.preventDefault();
    
    const formData = new FormData(form);

    // Add cropped image data to formData
    const croppedImages = document.querySelectorAll('.img-thumbnail');
    croppedImages.forEach((img, index) => {
      if (img.src !== '#') {
        formData.append(`productImages`, dataURLtoBlob(img.src), `croppedImage${index + 1}.png`);
      }
    });

    try {
      const response = await fetch('/admin/add-product', {
        method: 'POST',
        body: formData
      });

      const result = await response.json();
      if (result.success) {
        Swal.fire({
          icon: 'success',
          title: 'Success',
          text: result.message
        }).then(() => {
          form.reset();
          document.querySelectorAll('.img-thumbnail').forEach(img => img.src = '#');
        });
      } else {
        Swal.fire({
          icon: 'error',
          title: 'Error',
          text: result.message
        });
      }
    } catch (error) {
      console.error('Error submitting form:', error);
      Swal.fire({
        icon: 'error',
        title: 'Error',
        text: 'Error submitting form. Please try again.'
      });
    }
  });

  // Open cropper modal
  window.openCropper = function (input, previewId) {
    currentInput = input;
    currentPreviewId = previewId;

    const file = input.files[0];
    if (file) {
      const reader = new FileReader();
      reader.onload = function (e) {
        const image = document.getElementById('cropperImage');
        image.src = e.target.result;

        // Initialize Cropper.js
        cropper = new Cropper(image, {
          aspectRatio: 1,
          viewMode: 2,
        });

        // Show the modal
        const cropperModal = new bootstrap.Modal(document.getElementById('cropperModal'));
        cropperModal.show();
      };
      reader.readAsDataURL(file);
    }
  };

  // Handle cropping
  const cropButton = document.getElementById('cropButton');
  cropButton.addEventListener('click', function () {
    const canvas = cropper.getCroppedCanvas({
      width: 700,
      height: 700,
    });

    // Get the cropped image data URL and set it to the preview
    const croppedImageURL = canvas.toDataURL('image/png');
    const previewImage = document.getElementById(currentPreviewId);
    previewImage.src = croppedImageURL;

    // Hide the modal
    const cropperModal = bootstrap.Modal.getInstance(document.getElementById('cropperModal'));
    cropperModal.hide();

    // Destroy the cropper instance
    cropper.destroy();
  });

  // Convert data URL to Blob
  function dataURLtoBlob(dataurl) {
    const arr = dataurl.split(',');
    const mime = arr[0].match(/:(.*?);/)[1];
    const bstr = atob(arr[1]);
    let n = bstr.length;
    const u8arr = new Uint8Array(n);
    while (n--) {
      u8arr[n] = bstr.charCodeAt(n);
    }
    return new Blob([u8arr], { type: mime });
  }
});

